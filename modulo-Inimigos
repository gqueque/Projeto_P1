import pygame
import random

pygame.init()
x = 1280
y = 720
screen = pygame.display.set_mode((x, y))

class Inimigos():
    '''reaparição dos inimigos'''
    def respawnar():
        x = 1350
        y = random.randint(80, 560)
        return [x, y]
    '''definimos Imagens e Posicao dos inimigos e criamos os 3 Inimigos'''
    def __init__ (self, imagem, posicao): #método construtor
        self.imagem = imagem
        self.posicao = posicao
    
    def _Imagens (endereco): # métodos utilitários (usados internamente)
        endereco = endereco
        img_inimigo = pygame.transform.scale(endereco, (70, 70))
        return img_inimigo

    endereco_runtime = pygame.image.load("fotos/runtimeerror.png").convert_alpha()
    endereco_erro = pygame.image.load("fotos/erro.png").convert_alpha()
    endereco_chatgpt = pygame.image.load("fotos/gpt.png").convert_alpha()
    
    img_runtime = _Imagens(endereco_runtime)
    img_erro = _Imagens(endereco_erro)
    img_chatgpt = _Imagens(endereco_chatgpt)

    def _Posicao (x,y):
        pos_x = x
        pos_y = y
    
    pos_runtime = _Posicao(500,360)
    pos_erro = _Posicao(100,300)
    pos_chatgpt = _Posicao(500,300)

    def Inimigo_runtime ():
        global img_runtime, pos_runtime, Inimigos
        runtime = Inimigos(img_runtime, pos_runtime)
        return runtime
    
    def Inimigo_erro ():
        global img_erro, pos_erro, Inimigos
        erro = Inimigos(img_erro, pos_erro)
        return erro
    
    def Inimigo_chatgpt ():
        global img_chatgpt, pos_chatgpt, Inimigos
        chatgpt = Inimigos(img_chatgpt, pos_chatgpt)
        return chatgpt
    
    runtime = Inimigo_runtime()
    erro = Inimigo_erro ()
    chatgpt = Inimigo_chatgpt ()
